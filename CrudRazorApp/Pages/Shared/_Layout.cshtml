<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CrudRazorApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Layout.css" />

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white border-bottom">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">
                <img src="~/img/icon.png" alt="Logo del Gestor" />
                Gestor de Proyectos y Tareas
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Dashboard/IndexDashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Proyectos/Index">Proyectos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Tareas/Index">Tareas</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Productos/Contacto">Contacto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
