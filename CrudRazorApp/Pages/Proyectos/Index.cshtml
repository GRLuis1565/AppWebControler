@page
@model CrudRazorApp.Pages.Productos.IndexModel
@{
    ViewData["Title"] = "Productos";
}

<link rel="stylesheet" href="~/css/IndexProyectos.css" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Gestor de Proyectos</h1>
    <a class="btn btn-success" asp-page="Create">➕ Nuevo Proyecto</a>
</div>

<div class="categoria-box">
    <button class="categoria-btn">Categoría</button>
</div>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Nombre del proyecto</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Finalizacion</th>
            <th>Integrante</th>
            <th>Tareas</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListaProductos)
{
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Precio</td>
            <td>@item.Precio</td>
            <td>@item.Precio</td>
            <td>@item.Precio</td>
            <td class="text-end">
                <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
