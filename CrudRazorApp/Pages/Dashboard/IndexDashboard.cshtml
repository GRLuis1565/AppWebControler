@page
@model CrudRazorApp.Pages.Dashboard.IndexDashboardModel
@{
    ViewData["Title"] = "Dashboard - Gestor de Proyectos y Tareas";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/IndexDashboard.css" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <img src="~/img/icon.png" alt="icono" class="sidebar-icon">
            <h3>Gestor de Proyectos y Tareas</h3>
        </div>

        <nav class="sidebar-menu">
            <a href="#" class="menu-item active">
                <i class="bi bi-house-door-fill"></i> Dashboard
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-kanban"></i> Proyectos
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-list-check"></i> Tareas
            </a>
            <a href="#" class="menu-item">
                <i class="bi bi-box-arrow-right"></i> Cerrar sesión
            </a>
        </nav>
    </aside>

    <!-- Main content -->
    <main class="main-content">
        <h1 class="title">Dashboard</h1>

        <!-- Estadísticas -->
        <div class="stats-cards">
            <div class="card">
                <h2>3</h2>
                <p>Proyectos activos</p>
            </div>
            <div class="card">
                <h2>5</h2>
                <p>Tareas completadas</p>
            </div>
            <div class="card">
                <h2>4</h2>
                <p>Integrantes activos</p>
                <i class="bi bi-person-fill"></i>
            </div>
        </div>

        <!-- Sección inferior -->
        <div class="bottom-section">
            <div class="chart-card">
                <h5>Progreso del proyecto</h5>
                <canvas id="projectChart" width="150" height="150"></canvas>

                <div class="chart-legend">
                    <span><span class="dot blue"></span> Terminado</span>
                    <span><span class="dot green"></span> Por hacer</span>
                    <span><span class="dot orange"></span> Pendiente</span>
                </div>
            </div>

            <div class="projects-card">
                <h5>Proyectos</h5>
                <div class="project-item"></div>
                <div class="project-item"></div>
                <div class="project-item"></div>
            </div>
        </div>
    </main>
</div>

<script>
    const ctx = document.getElementById('projectChart');
    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Terminado', 'Por hacer', 'Pendiente'],
            datasets: [{
                data: [45, 35, 20],
                backgroundColor: ['#3b82f6', '#22c55e', '#f59e0b'],
                borderWidth: 2,
            }]
        },
        options: {
            plugins: {
                legend: { display: false },
            },
            cutout: '70%',
        },
    });
</script>
